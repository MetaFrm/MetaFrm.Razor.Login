@using MetaFrm.Control
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@inherits BaseComponent

<div class="container">
    <div class="form-outline pb-1">
        <h1>@Localization["로그인"]</h1>
        <p>@Factory.ProjectService.ServiceName</p>
    </div>
    <div class="row d-flex align-items-center justify-content-center h-100">
        <div class="col-md-8 col-lg-7 col-xl-6 mb-4">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid" alt="Phone image">
        </div>
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
            @if (this.isBusy)
            {
            }
            else
            {
                <EditForm Model="@this.LoginViewModel" OnValidSubmit="this.HandleValidSubmitAsync">
                    <DataAnnotationsValidator />

                    <div class="row">
                        <span class="col-md-12 oi oi-person ps-3 pb-2"><span class="ps-1">@Localization["이메일 주소"]</span></span>
                        <!-- Email input -->
                        <div class="col-md-12 mb-4">
                            <InputText id="email" class="form-control form-control" placeholder="@Localization["이메일 주소"]" @bind-Value="this.LoginViewModel.Email" @onkeydown="@EmailKeydown" @oninput="@HandleInputChange" />
                            <ValidationMessage For="@(()=>this.LoginViewModel.Email)" />
                        </div>

                        <span class="col-md-12 oi oi-lock-unlocked ps-3 pb-2"><span class="ps-1">@Localization["비밀번호"]</span></span>
                        <!-- Password input -->
                        <div class="col-md-12 mb-4">
                            <InputText id="password" type="password" class="form-control form-control" placeholder="@Localization["비밀번호"]" @bind-Value="this.LoginViewModel.Password" />
                            <ValidationMessage For="@(()=>this.LoginViewModel.Password)" />
                        </div>

                        <div class="col-md-12 mb-4">
                            <!-- Checkbox -->
                            <InputCheckbox id="remembermelabel" class="form-check-input" @bind-Value="this.Rememberme" />
                            <label class="form-check-label ps-1" for="remembermelabel">@Localization["아이디 저장"]</label>
                            <!-- Checkbox -->
                            <InputCheckbox id="autologinlabel" class="form-check-input" @bind-Value="this.AutoLogin" />
                            <label class="form-check-label ps-1" for="autologinlabel">@Localization["자동 로그인"]</label>
                        </div>
                        <div class="col-md-6 mb-4">
                            <a href="#" @onclick="this.OnPasswordResetClick">@Localization["비밀번호를 잊어버렸습니까?"]</a>
                        </div>

                        <!-- Submit button -->
                        <div class="col-md-6 mb-4"> </div>
                        <div class="col-md-6 mb-4">
                            <button type="submit" class="btn btn-primary btn-block w-100">@Localization["로그인"]</button>
                        </div>

                        <div class="col-md-12 mb-4 text-center">
                            <p>@Localization["계정이 없나요?"] <a href="#" @onclick="this.OnRegisterClick">@Localization["가입하기"]</a></p>
                        </div>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>